---
export interface Props { 
    name: string;
    description: string;
    url: string;
    image: string;
}

let { image, name, description, url } = Astro.props;
---

<a href={url}>
    <h1>{ name }</h1>
    <p>{ description }</p>
    <img src={image}>
</a>

<style>
    a {
        color: inherit;
        text-decoration: none;
    }
</style>